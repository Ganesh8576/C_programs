  {
    "name": "(Windows) Attach",
    "type": "cppvsdbg",
    "request": "attach",
  },
    {
      "name": "C/C++ Runner: Debug Session",
      "type": "cppdbg",
      "request": "launch",
      "args": [],
      "stopAtEntry": false,
      "externalConsole": true,
      "cwd": "c:/Users/Dell/Desktop/c",
      "program": "c:/Users/Dell/Desktop/c/build/Debug/outDebug",
